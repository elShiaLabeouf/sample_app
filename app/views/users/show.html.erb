<% provide(:title, @user.name) %> 
<div class="row">
	<aside class="span4">
		<section>
			<h1> 
				<%= gravatar_for @user %>
				<%= @user.name %> 
			</h1>
		</section>
	</aside>
  <%= form_for( Micropost.new, url: user_microposts_path(@user.id) ) do |f| %>
      <% f.hidden_field :user_id, value: @user.id %>

      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.submit 'Post', class: "btn btn-large btn-primary" %>
  <% end %>

	<div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
